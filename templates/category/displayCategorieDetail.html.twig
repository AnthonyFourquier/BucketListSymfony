{% extends "main/base.html.twig " %}
{% set title="Bucket-List - Afficher - " %}


{% block title %}
	{{title}}
{% endblock %}

{% block main %}
	<link rel="stylesheet" href="{{ asset('css/card.css') }}">
	<div class="title" style="margin-top: 15%;">
		{{title}}  Categorie - {{categorie.name}}
	</div>

	{% include "helper/_flash.html.twig" %}
	<div class="bigContainer">
		<div class="container">
			{% for bucketList in categorie.bucketList %}
				<a href="detail/{{bucketList.id}}" class="lien">
					<div class="card">
						<div class="cardimg">
							<img class="cardimg" src="https://thumbs.dreamstime.com/b/notepad-text-bucket-list-bucket-list-196397492.jpg" alt="">
						</div>
						<div class="name">
							<h3>{{bucketList.name}}</h3>
						</div>
						<div class="categorie">
							Catégorie :
							{{ bucketList.categorie.name}}
						</div>
						<div class="description">
							Description :
							{{bucketList.content}}</div>
						<div class="isTodo" style="display: flex;flex-direction: row;justify-content: center; width:100%;">
							<label for="isTodo">Realisé :
							</label>
							<input type="checkbox" id="isTodo" name="isTodo" value="{{bucketList.isTodo}}" style="display:block; margin-left: 10px;" readonly>
						</div>
						<div class="auteur">
							Auteur :
							{{bucketList.author}}
						</div>
						<div class="date" style="padding-bottom: 10px;">Date :
							{{bucketList.date | date("d-m-Y")}}</div>
					</div>
				</a>
			{% else %}
				<h3>
					Aucune bucket list disponible</h3>
			{% endfor %}
		</div>

	</div>
{% endblock %}

