{% extends "main/base.html.twig " %}
{% set title="Bucket-List - Details" %}


{% block title %}
	{{title}}
{% endblock %}

{% block main %}
	<link rel="stylesheet" href="{{ asset('css/card.css') }}">
	<div class="title" style="margin-top: 15%;">
		{{title}}
	</div>
	{% include "helper/_flash.html.twig" %}
	<div class="bigContainer">
		<div class="container">
			<div class="card" style="width: 300px; height: 500px; font-size: 25px;">
				<div>
					<img class="cardimg" style="height: 150px;" src="https://thumbs.dreamstime.com/b/notepad-text-bucket-list-bucket-list-196397492.jpg" alt="">
				</div>
				<div class="name">
					<h3>
						{{bucketList.name}}</h3>
				</div>
				<div class="categorie">
					Catégorie : {{ bucketList.categorie.name }}
				</div>
				<div class="description">
					Description : {{bucketList.content}}</div>
				<div class="isTodo" style="display: flex;flex-direction: row;justify-content: center;">
					<label for="isTodo">Realisé :
					</label>
					<input type="checkbox" id="isTodo" name="isTodo" value="{{bucketList.isTodo}}" style="display:block; margin-left: 10px;">
				</div>
				<div class="auteur">
					Auteur :
					{{bucketList.author}}
				</div>
				<div class="date">
					Date : {{bucketList.date | date("d-m-Y")}}</div>
					<div class="btn">
					<a href="edit/{{bucketList.id}}" class="validation">
						Editer
					</a>
				<form action="{{ path("delete") }}" method="post" onsubmit="return confirm('Voulez-vous supprimé cette bucket list ?')">
					<input type="hidden" name="token" value="{{ csrf_token('anthony')}}">
					<input type="hidden" name="id" value="{{bucketList.id}}">
					<button type="submit" class="validation">
						Surprimer
					</button>
				</form>
			</div>
			</div>
		</div>
	</div>
{% endblock %}

